{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/wsc-question.schema.json",
  "title": "WSC Question",
  "type": "object",
  "required": ["id", "category", "question", "choices", "correct", "topics", "explanation"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 8,
      "maxLength": 24,
      "pattern": "^q_[A-Za-z0-9]{6,22}$"
    },
    "category": {
      "type": "string",
      "enum": [
        "single_topic_understanding",
        "context_clues",
        "comparative_consequences",
        "thematic_synthesis"
      ]
    },
    "question": {
      "type": "string",
      "minLength": 1
    },
    "choices": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 5,
      "maxItems": 5
    },
    "correct": {
      "type": "string",
      "enum": ["A", "B", "C", "D", "E"]
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "explanation": {
      "type": "string",
      "minLength": 30
    }
  },
  "additionalProperties": false
}
